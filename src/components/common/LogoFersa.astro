---
import Image from './Image.astro';

const image = {
  src: '~/assets/images/logo-rojisa.png',
  alt: 'Fersa Logo',
};

const darkImage = {
  src: '~/assets/images/logo-rojisa.png',
  alt: 'Fersa Logo',
};
---

<Image
  class="mx-auto rounded-md w-full block dark:hidden"
  sizes="(max-width: 100px) 80px "
  loading="eager"
  width={140}
  height={70}
  {...image}
/>
<Image
  class="mx-auto rounded-md w-full hidden dark:block"
  sizes="(max-width: 100px) 80px "
  loading="eager"
  width={140}
  height={70}
  {...darkImage}
/>
